<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#0f5959">

    <TextView
        android:id="@+id/tvtop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"
        android:textColor="#FFF"
        android:background="#042326"
        android:textStyle="bold"
        android:textSize="25dp"
        android:text="Título"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvtop"
        android:layout_above="@+id/tvbot"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="15dp"
            android:gravity="center"
            android:background="#0a3a40"
            android:textColor="#FFF"
            android:textSize="20dp"
            android:text="Texto do cartão 1"/>
        <TextView
            android:id="@+id/tv2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="15dp"
            android:gravity="center"
            android:background="#0a3a40"
            android:textColor="#FFF"
            android:textSize="20dp"
            android:text="Texto do cartão 2"/>
        <TextView
            android:id="@+id/tv3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="15dp"
            android:gravity="center"
            android:background="#0a3a40"
            android:textColor="#FFF"
            android:textSize="20dp"
            android:text="Texto do cartão 3"/>
        <TextView
            android:id="@+id/tv4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="15dp"
            android:gravity="center"
            android:background="#0a3a40"
            android:textColor="#FFF"
            android:textSize="20dp"
            android:text="Texto do cartão 4"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvbot"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textColor="#FFF"
        android:background="#042326"
        android:textStyle="bold"
        android:textSize="25dp"
        android:text="José Lima - 23442"/>

  </RelativeLayout>