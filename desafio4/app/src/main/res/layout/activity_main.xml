<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#13678A">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Insert New Person"
        android:background="#012030"
        android:textColor="#45C4B0"
        android:gravity="center"
        android:padding="20dp"
        android:textSize="25sp"/>

    <EditText
        android:id="@+id/nameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:backgroundTint="#45C4B0"
        android:textColorHint="#45C4B0"
        android:layout_marginHorizontal="50dp"
        android:layout_marginVertical="25dp"
        android:textSize="20sp"
        android:layout_below="@+id/tv1"/>

    <EditText
        android:id="@+id/ageInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#45C4B0"
        android:textColorHint="#45C4B0"
        android:layout_marginHorizontal="50dp"
        android:hint="Age"
        android:layout_below="@+id/nameInput"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sex"
        android:layout_below="@+id/ageInput"
        android:textSize="20sp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        android:textColor="#45C4B0"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/tv2"
        android:layout_marginHorizontal="120dp">


        <CheckBox
            android:id="@+id/opt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Masculine"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="#45C4B0"/>

        <CheckBox
            android:id="@+id/opt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Feminine"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#45C4B0"/>

        <CheckBox
            android:id="@+id/opt3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Non Binary"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#45C4B0"/>


    </LinearLayout>



    <Button
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnList"
        android:backgroundTint="#012030"
        android:textColor="#45C4B0"
        android:text="Add Person"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btnList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List"
        android:backgroundTint="#012030"
        android:textColor="#45C4B0"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>